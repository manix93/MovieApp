<div class="main">
  <div class="container">
    <h2>Popular films:</h2>

  <%= @movies.each do |movie| %>
  <div class="movie">
    <%= image_tag movie.image %>
    <h3><%= movie.title %></h3>
    <p><%= movie.release_year %></p>
    <p><%= movie.plot %></p>
    <%= link_to "Read more", movie_path(movie) %>r
  </div>
  <% end %>
    </div>
</div>
