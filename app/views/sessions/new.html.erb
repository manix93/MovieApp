<div class="login">
  <div class="container">
    <div class="form">

      <h3 class="movie-title">Log in</h3>

      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email, :placeholder => 'Email' %>
        <%= f.password_field :password, :placeholder => 'Password' %>
        <%= f.submit 'Log in', class: 'btn-submit' %>
      <% end %>

    </div>
  </div>
</div>
